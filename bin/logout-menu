#!/bin/bash

res=$(rofi -dmenu -bg '#000000' -fg '#FF0000' -hlbg '#000000' -hlfg '#36C3F9' -bc '#36C3F9' -bw 0 -lines 5 -eh 2 -terminal urxvt -run-command "bash -i -c '{cmd}'" -width 100 -padding $(($(xwininfo -root |awk '/Height/ { print $2}')/2-75)) -fuzzy -hide-scrollbar < ~/.dmenu-i3exit)

if [ $res = "logout" ]; then
    i3-msg exit
fi
if [ $res = "restart" ]; then
    reboot
fi
if [ $res = "shutdown" ]; then
    poweroff
fi
if [ $res = "sleep" ]; then
    lock -f Ubuntu-Mono && sudo pm-hibernate
fi
if [ $res = "lock" ]; then
    lock -f Ubuntu-Mono
fi
exit 0
